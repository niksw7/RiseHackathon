<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.identitycrisis.UI.RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>

    <TextView
        android:id="@+id/click"
        android:paddingLeft="10dp"
        android:paddingTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="UserName"
        android:textColor="@color/appColor"/>

    <EditText
        android:id="@+id/edt_usrname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/_10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@drawable/edt_txt_bckgrnd"
        android:textCursorDrawable="@drawable/cursor_specs"/>

    <TextView
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="Password"
        android:textColor="@color/appColor"/>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="@dimen/_10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@drawable/edt_txt_bckgrnd"
        android:textCursorDrawable="@drawable/cursor_specs"/>

    <TextView
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="Name"
        android:textColor="@color/appColor"/>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/_10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@drawable/edt_txt_bckgrnd"
        android:textCursorDrawable="@drawable/cursor_specs"/>

    <TextView
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="Address"
        android:textColor="@color/appColor"/>

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:maxLines="3"
        android:padding="@dimen/_10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@drawable/edt_txt_bckgrnd"
        android:textCursorDrawable="@drawable/cursor_specs"/>

    <TextView
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="Age"
        android:textColor="@color/appColor"/>

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="3"
        android:padding="@dimen/_10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@drawable/edt_txt_bckgrnd"
        android:textCursorDrawable="@drawable/cursor_specs"/>


    <Button
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Submit Documents"
        android:textColor="@color/white"
        android:background="@drawable/button_rev"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_submit"
       />
</LinearLayout>
</ScrollView>